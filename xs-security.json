{
  "xsappname" : "capapp", 
  "scopes"     : [ { 
                    "name" : "$XSAPPNAME.Viewer", 
                    "description" : "Able to view data from services" }, 
                   { 
                    "name" : "$XSAPPNAME.Admin", 
                    "description" : "Able to edit data also" 
                  }
],
 "attributes" : [ { 
                    "name" : "BankName", 
                    "description" : "BankName allow Row level Security", 
                    "valueType" : "string" 
                  }
                 ], 
 "role-templates": [ { 
                    "name"                : "Viewer", 
                    "description"         : "View all the employees", 
                    "default-role-name": "Viewer: Authorized to Read All Emplyees",
                    "scope-references"    : [ 
                                         "$XSAPPNAME.Viewer" ], 
                    "attribute-references": [
                                            {
                                            "name" : "BankName"
                                            }
                                            ]  
                    }, 
                   { 
                    "name"               : "Admin", 
                    "description"        : "Edit the Employee Details", 
                    "scope-references"   : [ 
                                          "$XSAPPNAME.Admin" 
                                        ]
                    } 
                   ], 
 "role-collections": [
                     {
                    "name": "ViewerAndAdminColl",
                    "description": "User Viewer and Editor Role Collection",
                    "role-template-references": ["$XSAPPNAME.Viewer","$XSAPPNAME.Admin"]
                     }
                   ],
 "authorities":["$ACCEPT_GRANTED_AUTHORITIES"],
 "oauth2-configuration": {
                    "token-validity": 900, 
                    "refresh-token-validity": 1800,
                    "redirect-uris": ["https://api.cf.us10-001.hana.ondemand.com"], 
                    "autoapprove": "false"
 },
 "xsenableasyncservice":"true"
}
